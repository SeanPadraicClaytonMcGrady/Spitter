generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider     = "mysql"
    url          = env("DATABASE_URL")
    relationMode = "prisma"
}

//Spit = Tweet
model Spit {
    id           String   @id @default(uuid())
    userId       String
    content      String
    creationTime DateTime @default(now())

    user  User   @relation(fields: [userId], references: [id], onDelete: Cascade)
    likes Like[]

    @@unique([creationTime, id])
    @@index([userId])
}

//Ideally, we want to use likes & dislikes to provide the foundation for a Naive Bayes Algorithm to provide a filter for spits people
//agree with, and spits people disagree with.

//Soon, we need to construct a model for dislikes to fulfill a similar function as likes. For NBA, we can have like/not like, dislike/not dislike.
//We can in theory make 3 more types of content for potential users via the feed tabs tailored for: likes, dislikes, neither.

//That would make a 5 tab system of chronological, following, likes, dislikes, neither. 
//This gives people flexibility to check for content they agree or disagree with.
//The neither category will be made of the not-like and not-dislike consequents of the NBA for like & dislike.
model Like {
    userId String
    spitId String
    user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
    spit   Spit   @relation(fields: [spitId], references: [id], onDelete: Cascade)

    @@id([userId, spitId])
    @@index([userId])
    @@index([spitId])
}

model Account {
    id                String  @id @default(cuid())
    userId            String
    type              String
    provider          String
    providerAccountId String
    refresh_token     String? @db.Text
    access_token      String? @db.Text
    expires_at        Int?
    token_type        String?
    scope             String?
    id_token          String? @db.Text
    session_state     String?
    user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

    @@unique([provider, providerAccountId])
    @@index([userId])
}

model Session {
    id           String   @id @default(cuid())
    sessionToken String   @unique
    userId       String
    expires      DateTime
    user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

    @@index([userId])
}

model User {
    id            String    @id @default(cuid())
    name          String?
    email         String?   @unique
    emailVerified DateTime?
    image         String?
    accounts      Account[]
    sessions      Session[]
    spits         Spit[]
    likes         Like[]

    //Non-Next Auth
    followers User[] @relation(name: "Followers")
    follows   User[] @relation(name: "Followers")
}

model VerificationToken {
    identifier String
    token      String   @unique
    expires    DateTime
    // @@index([userId])

    @@unique([identifier, token])
}
